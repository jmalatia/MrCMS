@model MrCMS.Web.Apps.Articles.Pages.Article
<article>
    <div class="row">
        <div class="col-md-12">
            <h1 class="margin-top-0">@Editable(Model, p => p.Name, false)</h1>
            @*<a href="/@Model.Parent.UrlSegment" class="btn btn-default">Back</a>
                @Model.CreatedOn.Day @Model.CreatedOn.ToString("MMMMM") @Model.CreatedOn.Year
                <br />*@
            <div class="clearfix">
                <span style="display:inline-block; padding-top: .6em;" class="font-thin">
                    <span><i class="fa fa-calendar"></i> @Model.CreatedOn.Day @Model.CreatedOn.ToString("MMMMM") @Model.CreatedOn.Year</span>
                    @*&nbsp;*@
                    <span style="padding-left: 2em;"><i class="fa fa-user"></i> @Model.User.Name.ToString()</span>
                </span>
                <span class="pull-right"><a href="/@Model.Parent.UrlSegment" class="btn btn-default">Back</a></span>
            </div>
            <hr />
            @if (!String.IsNullOrEmpty(Model.FeatureImage))
            {
                @*<a href="/@Model.LiveUrlSegment" class="margin-top-0">*@
                    @RenderImage(Model.FeatureImage, default(System.Drawing.Size), null, null, new { @class = "pull-right img-responsive", style="margin: 0 0 1em 1em;" })
                @*</a>*@
            }
            @Editable(Model, page => page.BodyContent, true)
        </div>
    </div>
</article>

